<Window x:Class="SkipboGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkipboGame"
        mc:Ignorable="d"
        Title="Online Skipbo" Height="400" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="Green">
    <StackPanel>
        <Label Content="Welcome to" HorizontalAlignment="Center" FontSize="50" Foreground="Yellow"/>
        <Label Content="Skipbo" HorizontalAlignment="Center" FontSize="50" Foreground="Yellow"/>
        <StackPanel Orientation="Vertical">
            <Button x:Name="CreateButton" Margin="0,20" FontSize="50" Width="300" Content="Create Game" HorizontalAlignment="Center" Click="CreateButton_Click" Background="Yellow"/>
            <Button x:Name="JoinButton" Margin="0,0,0,20" FontSize="50" Width="300" Content="Join Game" HorizontalAlignment="Center" Click="JoinButton_Click" Background="Yellow"/>
        </StackPanel>
    </StackPanel>
</Window>
